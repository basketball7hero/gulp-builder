extends ../layouts/default/template


block head
    - pageSettings['pageTitle'] = 'Регистрация';
    - pageSettings['pageDescription'] = 'Регистрация';
    - pageSettings['pageKeywords'] = 'Регистрация';
    - pageSettings['class'] = '_registration';
    - pageSettings['navbar'] = true;
    - pageSettings['breadcrumbs'] = [{ text: 'Регистрация', active: true }];


block body-top-scripts


block body-bottom-scripts
    script(src='/static/js/bundle.min.js')


block content
    .container-fluid
        .container
            +e.content.grid-12
                +e.col.col-9
                    section.section
                        +b.FORM.form.js-form(id='form-user.create-1' data-action="user.create" autocomplete="off")
                            +e.section
                                input(data-name='email' type='text' placeholder='email' autocomplete='off')
                            +e.section
                                input(data-name='username' type='text' placeholder='username' autocomplete='off')
                            +e.section
                                input(data-name='password' type='password' placeholder='password' autocomplete='off')
                            +e.section
                                button(type='submit') Отправить
                +e.col.col-3
                    section.section
                        | test